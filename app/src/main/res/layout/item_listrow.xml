<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:background="@color/snow">
        <TextView
            android:id="@+id/tvTextvotes"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0\n votes"
            android:textAlignment="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tvTextanswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0\n answers"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:background="@color/snow">
        <TextView
        android:id="@+id/tvTexttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/lightskyblue"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvTextauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/darkgray"
            android:padding="8dp"/>

    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/linear"
        android:layout_height="1px"
        android:background="#000000"/>
</RelativeLayout>